<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GameAletheiaCross.ViewModels"
             x:Class="GameAletheiaCross.Views.DialogueView"
             x:DataType="vm:DialogueViewModel">
    
    <Grid Background="#000000DD" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Border Background="#1a1a2e" 
                BorderBrush="#00d9ff" 
                BorderThickness="2"
                CornerRadius="10"
                Padding="30"
                Width="600"
                MaxHeight="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            
            <StackPanel Spacing="20">
                <!-- Nombre del NPC -->
                <TextBlock Text="{Binding NpcName}" 
                         FontSize="24" 
                         FontWeight="Bold"
                         Foreground="#00d9ff"
                         FontFamily="monospace" />
                
                <!-- Diálogo -->
                <Border Background="#0f3460" 
                       BorderBrush="#00ff88" 
                       BorderThickness="1"
                       CornerRadius="5"
                       Padding="15">
                    <TextBlock Text="{Binding DialogueText}" 
                             FontSize="14" 
                             Foreground="White"
                             TextWrapping="Wrap"
                             FontFamily="monospace" />
                </Border>
                
                <!-- Botón Continuar -->
                <Button Content="Continuar (ESPACIO)"
                       Command="{Binding ContinueCommand}"
                       Width="200"
                       Height="50"
                       HorizontalAlignment="Center"
                       Background="#00ff88"
                       Foreground="#000000"
                       FontWeight="Bold"
                       FontFamily="monospace" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>