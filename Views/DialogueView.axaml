<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GameAletheiaCross.ViewModels"
             x:Class="GameAletheiaCross.Views.DialogueView"
             x:DataType="vm:DialogueViewModel"
             Background="Transparent">
    
    <Grid Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        
        <!-- Diálogo en la parte superior -->
        <Border Background="#CC0a0a15" 
                BorderBrush="#00d9ff" 
                BorderThickness="0,0,0,3"
                Padding="25,15"
                Width="900"
                MaxHeight="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,20,0,0"
                BoxShadow="0 5 20 2 #AA000000">
            
            <StackPanel Spacing="12">
                <!-- Nombre del NPC -->
                <TextBlock Text="{Binding NpcName}" 
                         FontSize="20" 
                         FontWeight="Bold"
                         Foreground="#00d9ff"
                         FontFamily="monospace" />
                
                <!-- Diálogo -->
                <TextBlock Text="{Binding DialogueText}" 
                         FontSize="14" 
                         Foreground="White"
                         TextWrapping="Wrap"
                         FontFamily="monospace"
                         MaxWidth="850" />
                
                <!-- Indicador de avance con tiempo -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           Spacing="10"
                           Margin="0,5,0,0">
                    <TextBlock Text="{Binding TimeRemaining, StringFormat='⏱ {0}s'}"
                             FontSize="11"
                             Foreground="#FFD700"
                             FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>