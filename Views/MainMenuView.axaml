<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:GameAletheiaCross.ViewModels"
             x:Class="GameAletheiaCross.Views.MainMenuView"
             x:DataType="vm:MainMenuViewModel">
    
    <Grid>
        <!-- Imagen de fondo -->
        <Image Source="avares://GameAletheiaCross/Assets/Images/InicioFondo.png"
               Stretch="UniformToFill"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        
        <!-- Overlay oscuro para mejorar legibilidad -->
        <Border Background="#000000AA" />
        
        <!-- Contenido del menÃº -->
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Spacing="20">
            
            <TextBlock Text="GAME ALETHEIA CROSS" 
                       FontSize="52" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="#00FF88"
                       Margin="0,0,0,30">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" OffsetX="3" OffsetY="3" BlurRadius="10"/>
                </TextBlock.Effect>
            </TextBlock>
            
            <Button Content="Nueva Partida" 
                    Command="{Binding NewGameCommand}"
                    Width="280" 
                    Height="60"
                    FontSize="18"
                    FontWeight="Bold"
                    Background="#740000"
                    Foreground="White"
                    BorderBrush="#ff0000"
                    BorderThickness="2"
                    CornerRadius="8"
                    Margin="0,10,0,0"/>
            
            <Button Content="Cargar Partida" 
                    Command="{Binding LoadGameCommand}"
                    Width="280" 
                    Height="60"
                    FontSize="18"
                    FontWeight="Bold"
                    Background="#0f3460"
                    Foreground="White"
                    BorderBrush="#1100ff"
                    BorderThickness="2"
                    CornerRadius="8"/>
            
            <Button Content="Ranking" 
                    Command="{Binding ShowRankingCommand}"
                    Width="280" 
                    Height="60"
                    FontSize="18"
                    FontWeight="Bold"
                    Background="#919400"
                    Foreground="White"
                    BorderBrush="#FFD700"
                    BorderThickness="2"
                    CornerRadius="8"/>
            
            <Button Content="Salir" 
                    Command="{Binding ExitCommand}"
                    Width="280" 
                    Height="60"
                    FontSize="18"
                    FontWeight="Bold"
                    Background="#4300a7"
                    Foreground="White"
                    BorderBrush="#520072"
                    BorderThickness="2"
                    CornerRadius="8"/>
            
        </StackPanel>
    </Grid>
    
</UserControl>