<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GameAletheiaCross.ViewModels"
             x:Class="GameAletheiaCross.Views.RankingView"
             x:DataType="vm:RankingViewModel">

    <Grid>
        <!-- Imagen de fondo -->
        <Image Source="avares://GameAletheiaCross/Assets/Images/RankedFondo.png"
               Stretch="UniformToFill"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>
        
        <!-- Overlay oscuro -->
        <Border Background="#000000CC" 
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>
        
        <!-- Contenido -->
        <Border Padding="40">
            <Grid RowDefinitions="Auto,*,Auto">
                
                <!-- Título -->
                <Border Grid.Row="0"
                       Background="#0a0a15"
                       BorderBrush="#FFD700"
                       BorderThickness="0,0,0,3"
                       Padding="20"
                       Margin="0,0,0,20"
                       CornerRadius="10,10,0,0">
                    <TextBlock Text="RANKING"
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="#FFD700">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" OffsetX="2" OffsetY="2" BlurRadius="8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>

                <!-- Tabla de ranking -->
                <Border Grid.Row="1"
                        Background="#0a0a15" 
                        BorderBrush="#FFD700" 
                        BorderThickness="2"
                        CornerRadius="5"
                        Padding="0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            
                            <!-- Encabezado -->
                            <Border Background="#1a1a2e" Padding="15" Margin="0">
                                <StackPanel Orientation="Horizontal" Spacing="20">
                                    <TextBlock Text="Pos" Width="60" FontWeight="Bold" Foreground="#FFD700" FontSize="14"/>
                                    <TextBlock Text="Jugador" Width="200" FontWeight="Bold" Foreground="#FFD700" FontSize="14"/>
                                    <TextBlock Text="Facción" Width="180" FontWeight="Bold" Foreground="#FFD700" FontSize="14"/>
                                    <TextBlock Text="Nivel" Width="100" FontWeight="Bold" Foreground="#FFD700" FontSize="14"/>
                                    <TextBlock Text="Score" Width="120" FontWeight="Bold" Foreground="#FFD700" FontSize="14"/>
                                </StackPanel>
                            </Border>

                            <!-- Filas de datos -->
                            <ItemsControl ItemsSource="{Binding TopPlayers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#0f3460"
                                               BorderBrush="#00AA00"
                                               BorderThickness="0,0,0,1"
                                               Padding="15"
                                               Margin="0">
                                            <StackPanel Orientation="Horizontal" Spacing="20">
                                                <TextBlock Text="{Binding Medal}" Width="60" VerticalAlignment="Center"
                                                         FontSize="18" FontWeight="Bold" Foreground="#FFD700" />
<StackPanel Orientation="Horizontal" Spacing="5">
    
    <!-- 1. Nombre del Jugador (Ancho fijo: 200) -->
    <Border Background="#000000" 
            CornerRadius="4" 
            Width="200"
            Margin="0" 
            Padding="8, 4"
            VerticalAlignment="Center">
        <TextBlock Text="{Binding PlayerName}"
                   Foreground="White" 
                   FontSize="14" 
                   FontWeight="Bold"
                   TextTrimming="CharacterEllipsis"/> <!-- Añadido: para manejar texto largo -->
    </Border>

    <!-- 2. Facción/Clase (Ancho fijo: 180) -->
    <Border Background="#000000" 
            CornerRadius="4" 
            Width="180"    
            Margin="0" 
            Padding="8, 4"
            VerticalAlignment="Center">
        <TextBlock Text="{Binding Faction}" 
                   Foreground="#00D9FF" 
                   FontSize="13"
                   TextTrimming="CharacterEllipsis"/> <!-- Añadido: para manejar texto largo -->
    </Border>

    <!-- 3. Nivel (Ancho fijo: 100) -->
    <Border Background="#000000" 
            CornerRadius="4" 
            Width="100"        
            Margin="0" 
            Padding="8, 4"
            VerticalAlignment="Center">
        <TextBlock Text="{Binding Level, StringFormat='Nivel {0}'}"
                   Foreground="#00FF88" 
                   FontSize="13" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/> <!-- Ajuste: Texto centrado en un ancho fijo -->
    </Border>
    
</StackPanel>
                                                <TextBlock Text="{Binding Score}" Width="120" VerticalAlignment="Center"
                                                         Foreground="#FFA500" FontWeight="Bold" FontSize="14"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Botón Volver -->
                <Button Grid.Row="2"
                        Content="Volver al Menú"
                        Command="{Binding BackCommand}"
                        Width="250"
                        Height="60"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"
                        Background="#070031"
                        Foreground="White"
                        BorderBrush="#FFFFFF"
                        BorderThickness="2"
                        FontWeight="Bold"
                        FontSize="16"
                        CornerRadius="8"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>