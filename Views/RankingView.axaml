<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GameAletheiaCross.ViewModels"
             x:Class="GameAletheiaCross.Views.RankingView"
             x:DataType="vm:RankingViewModel">

    <Border Background="#1a1a2e" Padding="40">
        <Grid RowDefinitions="Auto,*,Auto">
            
            <!-- Título -->
            <TextBlock Grid.Row="0"
                       Text="RANKING GLOBAL"
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="#FFD700"
                       Margin="0,0,0,20"
                       FontFamily="JetBrains Mono"/>

            <!-- Tabla de ranking -->
            <Border Grid.Row="1"
                    Background="#1a1a2e" 
                    BorderBrush="#FFD700" 
                    BorderThickness="2"
                    CornerRadius="5"
                    Padding="0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        
                        <!-- Encabezado -->
                        <Border Background="#0a0a15" Padding="15" Margin="0">
                            <StackPanel Orientation="Horizontal" Spacing="20">
                                <TextBlock Text="Pos" Width="50" FontWeight="Bold" Foreground="#FFD700"
                                           FontFamily=" "/>
                                <TextBlock Text="Jugador" Width="200" FontWeight="Bold" Foreground="#FFD700"
                                           FontFamily=" "/>
                                <TextBlock Text="Facción" Width="150" FontWeight="Bold" Foreground="#FFD700"
                                           FontFamily=" "/>
                                <TextBlock Text="Nivel" Width="80" FontWeight="Bold" Foreground="#FFD700"
                                           FontFamily=" "/>
                                <TextBlock Text="Score" Width="100" FontWeight="Bold" Foreground="#FFD700"
                                           FontFamily=" "/>
                            </StackPanel>
                        </Border>

                        <!-- Filas de datos -->
                        <ItemsControl ItemsSource="{Binding TopPlayers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#0f3460"
                                           BorderBrush="#00AA00"
                                           BorderThickness="0,0,0,1"
                                           Padding="15"
                                           Margin="0">
                                        <StackPanel Orientation="Horizontal" Spacing="20">
                                            <TextBlock Text="{Binding Medal}" Width="50" VerticalAlignment="Center"
                                                     FontSize="14" FontWeight="Bold" Foreground="#FFD700"
                                                     FontFamily=" "/>
                                            <TextBlock Text="{Binding PlayerName}" Width="200" VerticalAlignment="Center"
                                                     Foreground="White"
                                                     FontFamily=" "/>
                                            <TextBlock Text="{Binding Faction}" Width="150" VerticalAlignment="Center"
                                                     Foreground="#00D9FF"
                                                     FontFamily=" "/>
                                            <TextBlock Text="{Binding Level, StringFormat='Nivel {0}'}" Width="80" VerticalAlignment="Center"
                                                     Foreground="#00FF88"
                                                     FontFamily=" "/>
                                            <TextBlock Text="{Binding Score}" Width="100" VerticalAlignment="Center"
                                                     Foreground="#FFA500" FontWeight="Bold"
                                                     FontFamily=" "/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Botón Volver -->
            <Button Grid.Row="2"
                    Content="Volver"
                    Command="{Binding BackCommand}"
                    Width="200"
                    Height="50"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Background="#533483"
                    Foreground="White"
                    FontFamily=" "/>
        </Grid>
    </Border>
</UserControl>
