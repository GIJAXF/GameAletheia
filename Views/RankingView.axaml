<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GameAletheiaCross.ViewModels"
             x:Class="GameAletheiaCross.Views.RankingView"
             x:DataType="vm:RankingViewModel">

    <Grid>
        <!-- Imagen de fondo -->
        <Image Source="avares://GameAletheiaCross/Assets/Images/RankedFondo.png"
               Stretch="UniformToFill"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>
        
        <!-- Overlay oscuro -->
        <Border Background="#000000CC" 
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>
        
        <!-- Contenido -->
        <Border Padding="40">
            <Grid RowDefinitions="Auto,*,Auto">
                
                <!-- TÃ­tulo -->
                <Border Grid.Row="0"
                       Background="#0a0a15"
                       BorderBrush="#FFD700"
                       BorderThickness="0,0,0,3"
                       Padding="20"
                       Margin="0,0,0,20"
                       CornerRadius="10,10,0,0">
                    <TextBlock Text="ðŸ† RANKING GLOBAL ðŸ†"
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="#FFD700">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" OffsetX="2" OffsetY="2" BlurRadius="8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>

                <!-- Tabla de ranking -->
                <Border Grid.Row="1"
                        Background="#0a0a15DD" 
                        BorderBrush="#FFD700" 
                        BorderThickness="2"
                        CornerRadius="5"
                        Padding="0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            
                            <!-- Encabezado -->
                            <Border Background="#1a1a2e" Padding="15" Margin="0">
                                <StackPanel Orientation="Horizontal" Spacing="20">
                                    <TextBlock Text="Pos" Width="60" FontWeight="Bold" Foreground="#FFD700" FontSize="14"/>
                                    <TextBlock Text="Jugador" Width="200" FontWeight="Bold" Foreground="#FFD700" FontSize="14"/>
                                    <TextBlock Text="FacciÃ³n" Width="180" FontWeight="Bold" Foreground="#FFD700" FontSize="14"/>
                                    <TextBlock Text="Nivel" Width="100" FontWeight="Bold" Foreground="#FFD700" FontSize="14"/>
                                    <TextBlock Text="Score" Width="120" FontWeight="Bold" Foreground="#FFD700" FontSize="14"/>
                                </StackPanel>
                            </Border>

                            <!-- Filas de datos -->
                            <ItemsControl ItemsSource="{Binding TopPlayers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#0f3460DD"
                                               BorderBrush="#00AA00"
                                               BorderThickness="0,0,0,1"
                                               Padding="15"
                                               Margin="0">
                                            <StackPanel Orientation="Horizontal" Spacing="20">
                                                <TextBlock Text="{Binding Medal}" Width="60" VerticalAlignment="Center"
                                                         FontSize="18" FontWeight="Bold" Foreground="#FFD700" />
                                                <TextBlock Text="{Binding PlayerName}" Width="200" VerticalAlignment="Center"
                                                         Foreground="White" FontSize="14" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Faction}" Width="180" VerticalAlignment="Center"
                                                         Foreground="#00D9FF" FontSize="13"/>
                                                <TextBlock Text="{Binding Level, StringFormat='Nivel {0}'}" Width="100" VerticalAlignment="Center"
                                                         Foreground="#00FF88" FontSize="13" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Score}" Width="120" VerticalAlignment="Center"
                                                         Foreground="#FFA500" FontWeight="Bold" FontSize="14"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- BotÃ³n Volver -->
                <Button Grid.Row="2"
                        Content="â† Volver al MenÃº"
                        Command="{Binding BackCommand}"
                        Width="250"
                        Height="60"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"
                        Background="#533483"
                        Foreground="White"
                        BorderBrush="#AA0000"
                        BorderThickness="2"
                        FontWeight="Bold"
                        FontSize="16"
                        CornerRadius="8"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>