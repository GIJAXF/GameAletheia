<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GameAletheiaCross.ViewModels"
             x:Class="GameAletheiaCross.Views.TerminalView"
             x:DataType="vm:TerminalViewModel">
    
    <!-- âœ… Terminal como overlay pequeÃ±o -->
    <Grid Background="Transparent">
        <Border Background="#1E1E1EFF" 
                BorderBrush="#00FF00" 
                BorderThickness="2"
                CornerRadius="8"
                Width="600"
                Height="400"
                Padding="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Grid RowDefinitions="Auto,*,Auto">
                
                <!-- Encabezado -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="ðŸ’» TERMINAL" 
                             FontSize="16" 
                             FontWeight="Bold"
                             Foreground="#00FF00"
                             FontFamily="avares://GameAletheiaCross/Assets/Fonts/JetBrainsMono-Regular.ttf#JetBrains Mono"/>
                    <TextBlock Text="{Binding CurrentPuzzle.Name, StringFormat=' - {0}'}" 
                             FontSize="12" 
                             Foreground="#AAAAAA"
                             Margin="10,0,0,0"
                             FontFamily="avares://GameAletheiaCross/Assets/Fonts/JetBrainsMono-Regular.ttf#JetBrains Mono"/>
                </StackPanel>
                
                <!-- Ãrea de Output (arriba) -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                    <TextBlock Text="{Binding Output}" 
                             FontFamily="avares://GameAletheiaCross/Assets/Fonts/JetBrainsMono-Regular.ttf#JetBrains Mono"
                             FontSize="11"
                             Foreground="#00FF00"
                             TextWrapping="Wrap"
                             Padding="10"/>
                </ScrollViewer>
                
                <!-- Ãrea de Input (editor de cÃ³digo) -->
                <Border Grid.Row="2" Background="#0F0F0F" BorderBrush="#00AA00" BorderThickness="1" Margin="0,10,0,10">
                    <TextBox Text="{Binding Code, Mode=TwoWay}"
                           AcceptsReturn="True"
                           FontFamily="avares://GameAletheiaCross/Assets/Fonts/JetBrainsMono-Regular.ttf#JetBrains Mono"
                           FontSize="10"
                           Foreground="#00FF00"
                           Background="#0F0F0F"
                           Height="100"
                           Padding="10"
                           TextWrapping="Wrap"/>
                </Border>
                
                <!-- Botones -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                    <Button Content="â–¶ COMPILAR" 
                           Command="{Binding CompileCommand}"
                           Background="#00AA00"
                           Foreground="#000000"
                           Padding="15,8"
                           FontFamily="avares://GameAletheiaCross/Assets/Fonts/JetBrainsMono-Regular.ttf#JetBrains Mono"
                           FontWeight="Bold"/>
                    <Button Content="ðŸ’¡ PISTA" 
                           Command="{Binding ShowHintCommand}"
                           Background="#0080FF"
                           Foreground="White"
                           Padding="15,8"
                           FontFamily="avares://GameAletheiaCross/Assets/Fonts/JetBrainsMono-Regular.ttf#JetBrains Mono"
                           FontWeight="Bold"/>
                    <Button Content="âœ• CERRAR" 
                           Command="{Binding CloseCommand}"
                           Background="#AA0000"
                           Foreground="White"
                           Padding="15,8"
                           FontFamily="avares://GameAletheiaCross/Assets/Fonts/JetBrainsMono-Regular.ttf#JetBrains Mono"
                           FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>